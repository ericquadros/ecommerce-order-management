{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch .NET Core Project Web Api",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0/EcommerceOrderManagement.WebApi.dll", // Substitua <YourProjectName>
      "args": [],
      "cwd": "${workspaceFolder}/src/EcommerceOrderManagement.WebApi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "dotnetRunMessages": true,
      "justMyCode": true
    }
  ]
}
